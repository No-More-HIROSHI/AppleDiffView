{
    "manifest_version": 3,
    "name": "__MSG_extension_name__",
    "version": "1.0",
    "description": "__MSG_full_description__",
    "icons": {
      "16": "icon_16.png",
      "48": "icon_48.png",
      "128": "icon.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon_16.png",
        "48": "icon_48.png",
        "128": "icon.png"
      }
    },
    "content_scripts": [
        {
            "matches": ["https://www.apple.com/jp/*/compare/*"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
    "default_locale": "ja"
}
